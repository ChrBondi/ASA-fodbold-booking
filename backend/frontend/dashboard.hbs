<!DOCTYPE html>
<html>

<head>
    <title>Dashboard</title>
    <link rel="stylesheet" href="style.css"/>
    <script src="handlebars-v4.0.12.js"></script>
    <script src="controller.js"></script>
</head>

<body>
<div class="grid-con">
    <h1>Kunstgræsbanens bookingsystem</h1>
    <a href="/logout">Log ud</a>
</div>

<div class="grid-con">
    <h2>Vælg bane for at se bookede tider</h2>

    <input type="button" value="Ny booking" onclick="toggleBookingForm()">

    <select id="selectBane" onchange="getBookings(this.options[this.selectedIndex].value)" id="footballField">
        <option disabled selected value> -- vælg en bane --</option>
        {{>options}}
    </select>

    <div id="bookings">
    </div>
</div>

<div class="grid-con">
    <form id="booking-form" action="">
        <h1>Ny booking</h1>
        <div id="bookingData">
            <h2>Kontakt information</h2>

            <label>Lejer: <input type="text" id="renter"></label>
            <label>Kontaktperson: <input type="text" id="contactPerson"></label>
            <label>Mail: <input type="text" id="mail"></label>
            <label>Tlf: <input type="text" id="phone"></label>
            <br>
            <label id="checkbox1">Lys: <input type="checkbox" id="light"></label> <label id="checkbox2">Omkl:
            <input
                    type="checkbox" id="lockerroom"></label>
            <br>
            <label>Bemærkninger: <textarea id="comment"></textarea></label>
        </div>

        <div id="dateData">
            <h2>Booking information</h2>
            <label>Dato: <input type="text" id="date"></label>
            <label>Start tid: <input type="text" required id="startDate"> </label>
            <br>
            <label>Slut tid: <input type="text" required id="endDate"> </label>
        </div>

        <div id="priceData">
                <h2>Pris oversigt</h2>
            <table>
                <tr>
                    <th></th>
                    <th>Banetype</th>
                    <th>Pris</th>
                    <th>Timér</th>
                    <th>Á kr.</th>
                    <th>I alt</th>
                </tr>
                <tr>
                    <td>Pris baneleje</td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                </tr>
                <tr>
                    <td>Pris Lys</td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                </tr>
                <tr>
                    <td>Pris i alt</td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                </tr>
            </table>
        </div>
        <br>
            <button onclick="createBooking()">Reserver tid</button>
        <br>
    </form>
</div>

</body>
