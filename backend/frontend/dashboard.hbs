<!DOCTYPE html>
<html>

<head>
  <title>Dashboard</title>
  <link rel="stylesheet" href="style.css" />
  <link rel="stylesheet" href="calendar.css" />
  <script src="handlebars-v4.0.12.js"></script>
  <script src="calendar.js"></script>
  <script src="controller.js"></script>
</head>

<body>
  <div class="grid-container">
    <header>
      <h1>Kunstgræsbanens bookingsystem</h1>
      <div id="settings-buttons">
          <div>
              <button onclick="loadCalendar()">Kalender</button>
              <button>Instillinger</button>
          </div>
          <button href="/logout">Log ud</button>
      </div>
    </header>

    <main id="calendar">
    </main>

    <div id="booking-overview">
      <div id="booking-details">
        <h2>Vælg bane for at se bookede tider</h2>
        <select id="selectBane" onchange="getBookings(this.options[this.selectedIndex].value)">
            <option disabled selected value> -- vælg en bane --</option>
            {{#each options}}
                <option value={{this}}>{{this}}</option>
            {{/each}}
        </select>

        <div id="bookings"></div>

        <input type="button" value="Ny booking" onclick="toggleBookingForm()" id="new-booking-button">
        <table id="booking-information">
          <tr>
            <th>Booking information</th>
            <th>Kontakt information</th>
          </tr>
          <tr>
            <td id="datoInf">Dato:</td>
            <td id="renterInf">Lejer:</td>
          </tr>
          <tr>
            <td id="startTimeInf">Start tid:</td>
            <td id="contactPersonInf">Kontaktperson:</td>
          </tr>
          <tr>
            <td id="endTimeInf">Slut tid:</td>
            <td id="mailInf">Mail:</td>
          </tr>
          <tr>
            <td id="lightInf">Lys:</td>
            <td id="phoneInf">Tlf:</td>
          </tr>
          <tr>
            <td id="lockerRoomInf">Omkl:</td>
            <td id="commentsInf">Bemærkninger:</td>
          </tr>
          <tr>
            <button id="deleteBtn">Slet</button>
          </tr>
        </table>
      </div>

      <div id="booking-form">
        <h1 id="ny-booking-label">Ny booking</h1>

        <div id="dateData">
          <h2>Booking information</h2>

          <select id="footballField">
                <option disabled selected value> -- vælg en bane --</option>
                {{#each options}}
                    <option value={{this}}>{{this}}</option>
                {{/each}}
            </select>
          <label>Fra Dato: <input type="text" id="date"></label>
          <br>
          <label>Til Dato: <input type="text" id="date2"></label>
          <label>Start tid: <input type="text" required id="startDate"> </label>
          <br>
          <label>Slut tid: <input type="text" required id="endDate"> </label>
          <br>
          <br>
          <label id="checkbox1">Lys: <input type="checkbox" id="light"></label>
          <br>
          <label id="checkbox2">Omkl: <input type="checkbox" id="lockerRoom"></label>
        </div>

        <div>
          <h2>Kontakt information</h2>

          <label>Lejer: <input type="text" required id="renter"></label>
          <label>Kontaktperson: <input type="text" required id="contactPerson"></label>
          <label>Mail: <input type="text" id="mail"></label>
          <label>Tlf: <input type="text" id="phone"></label>
          <br>
          <label>Bemærkninger: <textarea id="comment"></textarea></label>
        </div>

        <div id="priceData">
          <h2>Pris oversigt</h2>
          <br>
          <table id="price-information">
            <tr>
              <th></th>
              <th> </th>
              <th>Pris</th>
            </tr>
            <tr>
              <td>Baneleje</td>
              <td> </td>
              <td>XXX</td>

            </tr>
            <tr>
              <td>Lys</td>
              <td> </td>
              <td>XXX</td>

            </tr>
            <tr>
              <th>Pris i alt</th>
              <td> </td>
              <td>XXX</td>

            </tr>
          </table>
        </div>

        <button id="create-booking-button" onclick="createBooking()">Reserver tid</button>
      </div>
    </div>

</body>
