<!DOCTYPE html>
<html>

<head>
  <title>Dashboard</title>
  <link rel="stylesheet" href="style.css" />
  <link rel="stylesheet" href="calendar.css" />
  <script src="handlebars-v4.0.12.js"></script>
  <script src="calendar.js"></script>
  <script src="controller.js"></script>
</head>

<body>
  <div class="grid-container">
    <header>
      <h1>Kunstgræsbanens bookingsystem</h1>
    </header>

    <main id="calendar">
    </main>

    <div id="booking-overview">
      <div id="booking-details">
        <h2>Bane oversigt</h2>
        <select id="selectBane" onchange="getBookings(this.options[this.selectedIndex].value)">
            <option disabled selected value> -- vælg en bane --</option>
            {{#each options}}
                <option value={{this}}>{{this}}</option>
            {{/each}}
        </select>

          <div class="scroller" id="scrollbar">
              <div id="bookings" class="force-overflow"></div>
          </div>


        <table id="booking-information">
          <tr>
            <th>Booking information</th>
            <th> </th>
          </tr>
          <tr>
              <td>Dato: </td>
            <td id="datoInf"></td>
              <td>  </td>
              <td>Lejer: </td>
            <td id="renterInf"></td>
          </tr>
          <tr>
              <td>Start tid: </td>
            <td id="startTimeInf"></td>
              <td>  </td>
              <td>Kontaktperson: </td>
            <td id="contactPersonInf"></td>
          </tr>
          <tr>
              <td>Slut tid: </td>
            <td id="endTimeInf"></td>
              <td>  </td>
              <td>Mail: </td>
            <td id="mailInf"></td>
          </tr>
          <tr>
            <td>Lys: </td>
            <td id="lightInf"></td>
              <td>  </td>
              <td>Tlf: </td>
              <td id="phoneInf"></td>
          </tr>
          <tr>
              <td>Omkl: </td>
            <td id="lockerRoomInf"></td>
              <td>  </td>
              <td>Bemærkninger: </td>
              <td id="commentsInf"></td>
          </tr>
        </table>
          <button id="deleteBtn">Slet booking</button>
      </div>

      <div id="booking-form">
          <br>
        <h2 id="ny-booking-label">Ny booking</h2>

        <div id="dateData">
            <br>
            <br>
          <select id="footballField">
                <option disabled selected value> -- vælg en bane --</option>
                {{#each options}}
                    <option value={{this}}>{{this}}</option>
                {{/each}}
            </select>
            <br>
          <label>Fra Dato: <input type="text" placeholder="DD-MM-YYYY" id="date" onkeyup="copyText()"></label>
          <label>Til Dato: <input type="text" placeholder="DD-MM-YYYY" id="date2" ></label>
          <label>Start tid: <input type="text" placeholder="TT:MM" required id="startDate" onkeyup="price()"> </label>
          <label>Slut tid: <input type="text" placeholder="TT:MM" required id="endDate" onkeyup="price()"> </label>
          <label id="checkbox1">Lys: <input type="checkbox" id="light" onclick="price()"></label>
          <label id="checkbox2">Omkl: <input type="checkbox" id="lockerRoom"></label>
        </div>

        <div id="contactData">
            <br>
          <label>Lejer: <input type="text" required id="renter"></label>
          <label>Kontaktperson: <input type="text" required id="contactPerson"></label>
          <label>Mail: <input type="text" id="mail"></label>
          <label>Tlf: <input type="text" id="phone"></label>
          <label>Bemærkninger: <textarea id="comment"></textarea></label>
        </div>
        <br>

          <div id="priceData">
              <p id="totalPrice">Pris: 0</p>
          </div>
        <button id="create-booking-button" onclick="createBooking()">Reserver tid</button>
          <button id="logout-button" onclick="logout()">Log ud</button>

    </div>

</body>
